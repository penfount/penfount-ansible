## Mastodon instance you are using
MBB_INSTANCE={{ mastodon_server }}

## Mastadon configured development app name, key, secret and token
MBB_APP_NAME="booster script"
MBB_APP_KEY="{{ boostbot_credentials.app_key }}"
MBB_APP_SECRET="{{ boostbot_credentials.app_secret }}"
MBB_APP_TOKEN="{{ boostbot_credentials.app_token }}"
MBB_APP_SCOPES=read:accounts read:statuses read:search read:follows write:conversations write:statuses push

## Hashtags to follow, without the hash '#' - must be normalized lowercase
MBB_TAG_NAMES=fountainpen fountainpens fountainpenink fountainpeninks fpsanta penfount

## Additional Filters
MBB_FILTEROUT_REBOOSTS=0
MBB_FILTERFOR_ACCOUNTS_WE_FOLLOW=0
